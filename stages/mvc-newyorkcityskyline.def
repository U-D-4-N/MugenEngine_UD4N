;--------------------------------------------------------
[Info]
;name = "MVC - New York City Skyline"
name = "G"
author = "Kung Fu Man"
;website = "http://randomselect.i-xcell.com"
;If you got this from anywhere else online, please send an email to kungfuman@gmail.com
;to notify me.

;--------------------------------------------------------
[Camera]
startx = 0
starty = 0
boundleft = -112
boundright = 112
boundhigh = -244
boundlow = 0
verticalfollow = .8
floortension = 50
tension = 50
zoomin = 1
zoomout = 0.8


;--------------------------------------------------------
[PlayerInfo]
;--- Player 1 ---
 ;Player 1 starting coordinates.
 ;p1startx is typically -70 and p2startx is 70.
 ;p1starty and p1startz should be 0.
p1startx = -70          ;Starting x coordinates
p1starty = 0            ;Starting y coordinates
p1startz = 10            ;Starting z coordinates
p1facing = 1            ;Direction player faces: 1=right, -1=left

;--- Player 2 ---
p2startx = 70
p2starty = 0
p2startz = -10
p2facing = -1

;--- Common ---
leftbound  = -1000 ;Left bound (x-movement)
rightbound =  1000 ;Right bound
topbound  =  0     ;Top bound (z-movement)
botbound  =  0     ;Bottom bound

;--------------------------------------------------------
[Scaling]
topz     = 0       ;Top z-coordinate for scaling
botz     = 50      ;Bottom z-coordinate for scaling
topscale = 1       ;Scale to use at top
botscale = 1.2     ;Scale to use at bottom

;--------------------------------------------------------
[Bound]
screenleft = 24    ;Dist from left of screen that player can move to
screenright = 24   ;Right edge

;--------------------------------------------------------
[StageInfo]
zoffset = 215
zoffsetlink = 1
autoturn = 1
resetBG = 1

;--------------------------------------------------------
[Shadow]
intensity = 48
yscale = 0.15
fade.range = -75,-25

;--------------------------------------------------------
[Reflection]
intensity = 0

;--------------------------------------------------------
[Music]
bgmusic = 
bgvolume = 255

;========================================================
;-------------------------------------
; Main background definition
[BGdef]
spr = stages/mvc-newyorkcityskyline.sff    ;Filename of sprite data

[BG 0]
type  = normal             ;Normal background layer
spriteno = 0, 0            ;Sprite group and number
delta = 1, .95               ;Change per unit
mask = 1

[BG 0]
type  = normal             ;Normal background layer
spriteno = 1, 0            ;Sprite group and number
delta = .56, 1               ;Change per unit
mask = 1

[BG 0]
type  = normal             ;Normal background layer
spriteno = 2, 0            ;Sprite group and number
delta = 1, 1               ;Change per unit
mask = 1

[BG 0]
type  = normal             ;Normal background layer
spriteno = 3, 0            ;Sprite group and number
delta = 1, 1               ;Change per unit
mask = 1